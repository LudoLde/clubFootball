{% extends 'base.html.twig' %}

{% block title %}ClubFootball⚽️{% endblock %}

{% block body %}

<div class="container">
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Club</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for joueur in joueurs %}
            <tr class="table-primary">
                <th>{{ joueur.firstName | capitalize }}</th>
                <td>{{ joueur.nom | capitalize }}</td>
                <td>{{ joueur.club.nom | upper }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('joueur.update', {id: joueur.id}) }}">Modifier</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('joueur.delete', {id: joueur.id}) }}">Supprimer</a>
                </td>
                <td>
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#PlayerId{{joueur.id}}">
            Plus d'infos
        </button>
        <div class="modal fade" id="PlayerId{{joueur.id}}" tabindex="-1" aria-labelledby="annModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="annModalLabel">{{joueur.firstName}}  {{joueur.nom}}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <p class="">Âge: {{joueur.age}}</p>
                                <p class="">Numéro de maillot: {{joueur.numero}}</p>
                                <p class="">Nationalité: {{joueur.nationalite}}</p>
                                <p class="">Naissance: {{joueur.dateNaissance | date('d-m-y')}}</p>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        </div>
                    </div>
            </div>
        </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation mt-4 d-flex justify-content-center">
        {{ knp_pagination_render(joueurs) }}
    </div>
</div>

{% endblock %}
